#include <iostream>
using namespace std;
class book
{
public:
    string name;

    int cost;

    void accept(void);
    void display(void);
    void price(void);
};
void book ::accept(void)
{
    {

        cout << "Enter the book name: " << endl;
        cin >> name;
        cout << "Enter the cost of book: " << endl;
        cin >> cost;
    }
}
void book ::display(void)
{

    //cout << "Book Name \t Book cost " << endl;
    cout<<name<<"\t\t"<<cost<<endl;
}
void book ::price(void){
    cout<<name<<"\t"<<cost<<endl;
}
int main()
{
    book b[10],a[10];
    
    int n, i, j, ch;
    cout << "Enter the number of books you want to insert: ";
    cin >> n;
    do
    {
        cout << "MENU\n1. insert\n2. display\n3. sorted books\n4. remove duplicate from original array\n5. remove duplicate from temporary array\n6. books below 500\n7. books above 500\n8. Exit\n ENTER YOUR CHOICE:  ";
        cin >> ch;
        switch (ch)
        {
        case 1:
            for (i = 0; i < n; i++)
            {
                b[i].accept();
            }
            break;
        case 2:
           cout << "Book Name\tBook cost " << endl;

            for (int i = 0; i < n; i++)
            {
                b[i].display();
            }
            break;
        case 3:
        cout << "Book Name\tBook cost " << endl;
            for (i = 0; i < n - 1; i++)
            {

                for (j = 0; j < n-i-1; j++)
                {
                    if (b[j].cost < b[j + 1].cost)
                    {
                        book temp;
                        temp = b[j + 1];
                        b[j + 1] = b[j];
                        b[j] = temp;
                    }
                }
            }
            for (int i = 0; i < n; i++)
            {
                b[i].display();
            }
            break;

        case 4:
            i = 0;
            for (j = 0; j < n; j++)
            {
                if (b[j].name != b[i].name)
                {
                    b[i + 1].name = b[j].name;
                    i++;
                }
            }
            for (int k = 0; k <= i; k++)
            {
                b[k].display(); 
            }
            
           
            break;
          
        case 5:
          
        case 6:
        cout<<"This books are below 500: "<<endl;
        for(i=0;i<n;i++){
            if (b[i].cost < 500){
                b[i].price();
                     
                //b[i].cost=a[i].cost;
                //b[i].name=a[i].name;
                //a[i].price();
                
               }
                
            }
            break;
        case 7:
        cout<<"This books are above 500: "<<endl;
        for(i=0;i<n;i++){
            if (b[i].cost >= 500){
                b[i].price();
               
                
            }
        }
            break;
         case 8:
         
        
        default:
        cout<<"invalid choice! try again ";
            break;
               
            
        };
    } while (ch != 8);
    return 0;
}
