      cout<<"Enter the Degree of Doctor : ";
      cin>>q;
      cout<<"Enter the Specialization: ";
      cin>>skills;
      cout<<"Enter the Doctor's Experience: ";
      cin>>exp;
      cout<<"Enter the Doctor's salary: ";
      cin>>salary;
    }
    
    void display(){
        
    }
}
