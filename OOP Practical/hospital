#include<iostream>
using namespace std;
class person{
   public:
   string name, gender;
   int id,age,contact;
   void accept(){
      cout<<"Enter the Name: ";
      cin>>name;
      cout<<"Enter the ID: ";
      cin>>id;
      cout<<"Enter the Age: ";
      cin>>age;
      cout<<"Enter the Gender: ";
      cin>>gender;
      cout<<"Enter the Contact no. : ";
      cin>>contact;
   }   
};

class doctor:public person{
    public:
